require 'firebase'
require 'faker'
base_uri = 'https://kilimanjaro-551ef.firebaseio.com/'
firebase = Firebase::Client.new(base_uri)


def random_image()
a=["https://firebasestorage.googleapis.com/v0/b/kilimanjaro-551ef.appspot.com/o/food%20shops%2Fhealthfitnessrevolution-com.jpg?alt=media&token=2767010d-344e-4874-878e-73730f7cfad0", "https://firebasestorage.googleapis.com/v0/b/kilimanjaro-551ef.appspot.com/o/food%20shops%2F201611-orig-foods-sugar-1-949x534.jpg?alt=media&token=923b87c8-7e1d-4151-b790-a04866b0c1d8", "https://firebasestorage.googleapis.com/v0/b/kilimanjaro-551ef.appspot.com/o/food%20shops%2FChinese-food.jpg?alt=media&token=f9637614-bc69-43e8-b251-48058759611f", "https://firebasestorage.googleapis.com/v0/b/kilimanjaro-551ef.appspot.com/o/food%20shops%2FESfood1c.jpg?alt=media&token=bf152951-d37e-4746-9e78-e71045f1f518", "https://firebasestorage.googleapis.com/v0/b/kilimanjaro-551ef.appspot.com/o/food%20shops%2Ffatty-foods-grouped-together.jpg?alt=media&token=4dcbccc6-5455-4531-be69-d23e56cb9bea", "https://firebasestorage.googleapis.com/v0/b/kilimanjaro-551ef.appspot.com/o/food%20shops%2Fhealthfitnessrevolution-com.jpg?alt=media&token=2767010d-344e-4874-878e-73730f7cfad0", "https://firebasestorage.googleapis.com/v0/b/kilimanjaro-551ef.appspot.com/o/food%20shops%2Fimages.jpg?alt=media&token=983001b5-a4a9-45d3-9175-cd8dcaf228c1", "https://firebasestorage.googleapis.com/v0/b/kilimanjaro-551ef.appspot.com/o/food%20shops%2Fplant-based-foods-may-soon-be-indistinguishable-from-the-foods-they-imitate.jpg?alt=media&token=18f00ee6-cf5d-4939-b0b1-2255ace463b5"]
return a.shuffle()[0]
end

def create_shop()
  shop ={
 address: Faker::Address.street_address,
 banner: random_image(),
 deliveryTime: '44-54 min',
 speciality: Faker::Address.country,
 name: Faker::Company.name,
 workingTime: "6:00pm - 12:00am",
 email: Faker::Internet.email
 }
items = []
  10.times do |item|
    items << {name: Faker::Food.spice, price: Faker::Commerce.price, description: Faker::Lorem.sentence(3, false, 10), imgUrl: random_image(), inStock: true}
  end
shop[:items] = items
return shop
end

30.times do |shop|
  shop = create_shop()
  firebase.push("foodShops", shop)
end
